<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E00BCD4"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="286dp"
        android:layout_height="407dp"
        android:background="#43E91E63"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634">

        <Spinner
            android:id="@+id/spinner_from_currency"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Convertir desde" />

        <EditText
            android:id="@+id/editText_amount"
            android:layout_width="254dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="Ingrese la cantidad"
            android:inputType="numberDecimal"
            android:textColor="#FFFEFE"
            android:textColorHighlight="#F6F3F3" />

        <Spinner
            android:id="@+id/spinner_to_currency"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="Convertir a" />

        <Button
            android:id="@+id/button_convert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#0B0B0B"
            android:text="Convertir" />

        <TextView
            android:id="@+id/textView_result"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:background="#C2F6F3"
            android:paddingTop="16dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="257dp"
        android:layout_height="166dp"
        android:src="@drawable/conversor_removebg_preview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

</androidx.constraintlayout.widget.ConstraintLayout>
